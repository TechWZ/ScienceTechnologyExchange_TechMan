<script>
    $.getScript("../handlebarsTemplateFile/compiledFile/systemCategory_m_index.hbs.js");
    function managementHandleView(levelTwoName) {
        switch(levelTwoName){
            case "管理系统分类":
                let dataHtml = Handlebars.templates.systemCategory_m_index(systemCategoryData);
                $("#v-pills-tabContent").html(dataHtml);
                break;
        }
    }
</script>

{{#each this}}
<div class="card">
    <div class="card-header" id="heading{{@index}}">
        <h5 class="mb-0">
            {{#if @first}}
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{@index}}" aria-expanded="true"
                aria-controls="collapse{{@index}}" style="text-decoration:none">
                {{mLevelOneName}}
            </button>
            {{else}}
            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse{{@index}}"
                aria-expanded="false" aria-controls="collapse{{@index}}" style="text-decoration:none">
                {{mLevelOneName}}
            </button>
            {{/ if}}
        </h5>
    </div>

    <div id="collapse{{@index}}" class="collapse {{#if @first}} show {{/ if}}" aria-labelledby="heading{{@index}}"
        data-parent="#accordion">
        <div class="card-body">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                {{#each mCLTwo}}
                {{#if @first}}
                <a class="nav-link active" id="{{mCategoryId}}" data-toggle="pill" href="#" role="tab"
                    aria-selected="true" onclick="managementHandleView('{{levelTwoName}}')">{{levelTwoName}}</a>
                {{else}}
                <a class="nav-link" id="{{mCategoryId}}" data-toggle="pill" href="#" role="tab"
                    aria-selected="false" onclick="managementHandleView('{{levelTwoName}}')">{{levelTwoName}}</a>
                {{/ if}}
                {{/ each}}
            </div>
        </div>
    </div>
</div>
{{/each}}